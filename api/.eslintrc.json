{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-console": "off",
        "import/no-dynamic-require": "off",
        "global-require": "off",
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        // "camelcase": ["error", { "properties": "never", "ignoreDestructuring": true, "ignoreImports": true }]
        "max-len": "off"
    }
}
